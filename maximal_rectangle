class Solution:
    def maximalRectangle(self, matrix: List[List[str]]) -> int:
        if not matrix:
            return 0
        n = len(matrix)
        m = len(matrix[0])
        heights = [0] * m
        maxArea = 0
        for i in range(n):
            for j in range(m):
                if matrix[i][j] == '1':
                    heights[j] += 1
                else:
                    heights[j] = 0
            stack = []
            for k in range(m + 1):
                h = heights[k] if k < m else 0
                while stack and h < heights[stack[-1]]:
                    height = heights[stack.pop()]
                    width = k if not stack else k - stack[-1] - 1
                    area = height * width
                    if area > maxArea:
                        maxArea = area
                stack.append(k)
        return maxArea
