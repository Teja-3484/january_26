class Solution:
    def minimumAbsDifference(self, arr: List[int]) -> List[List[int]]:
        arr.sort()
        ans = []
        m = float('inf')
        for i in range(len(arr) - 1):
            d = arr[i+1] - arr[i]
            if d < m:
                m = d
                ans = [[arr[i], arr[i+1]]]
            elif d == m:
                ans.append([arr[i], arr[i+1]])
        return ans
